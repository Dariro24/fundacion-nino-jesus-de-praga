---
const { title } = Astro.props;
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ?? "Fundación Niño Jesús de Praga"}</title>
    <link rel="stylesheet" href="/styles.css" />
    <meta name="description" content="Sitio oficial de la Fundación Niño Jesús de Praga, dedicada a la educación, salud y bienestar de comunidades vulnerables." />
    <meta name="author" content="Fundación Niño Jesús de Praga" />
    <meta property="og:title" content="Fundación Niño Jesús de Praga" />
    <meta property="og:description" content="Comprometidos con el desarrollo integral de niños, jóvenes y familias." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://fundacionninojesusdepraga.com" />
    <meta property="og:image" content="/assets/logo.png" />
  </head>
  <body>
    <header>
      <div class="logo">
        <Image src={logo} alt="Logo de la Fundación Niño Jesús de Praga" height={60} loading="eager"/>
        <h1>Fundación Niño Jesús de Praga</h1>
        <button id="menu-toggle" class="hamburger" aria-label="Abrir menú de navegación">&#9776;</button>
      </div>
      <nav id="main-nav" role="navigation" aria-label="Menú principal">
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><a href="/quienes-somos">¿Quiénes somos?</a></li>
          <li><a href="/portafolio">Portafolio</a></li>
          <li><a href="/experiencia">Experiencia</a></li>
          <li><a href="/contacto">Contacto</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>
        REPÚBLICA DE COLOMBIA<br />
        FUNDACIÓN NIÑO JESÚS DE PRAGA<br />
        LORICA - CÓRDOBA<br />
        Aprobación N° 1KV 10220110 de febrero de 2009<br />
        NIT: 900265448-8<br />
        &copy; {new Date().getFullYear()} Todos los derechos reservados.
      </p>
    </footer>

  <script type="module" src="/scripts/menu.js"></script>
  </body>
</html>
